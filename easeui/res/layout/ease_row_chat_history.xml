<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_itease_layout"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:background="#fff"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/em_btn_bottom_selector">

        <RelativeLayout
            android:id="@+id/avatar_container"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <com.hyphenate.easeui.view.RoundedImageView
                android:id="@+id/avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                app:border_color="#ededed"
                app:border_width="0.5dp"
                app:corner_radius="5dip"
                app:mutate_background="false"
                app:oval="true" />

            <TextView
                android:id="@+id/unread_msg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ease_unread_count_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/avatar_container"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/name"
            android:paddingRight="10dp"
            android:paddingLeft="2dp"
            android:textColor="@color/btn_white_normal"
            android:text=""
            android:textSize="11sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="6dp"
            android:textColor="#9f9fa0"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/msg_state"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/avatar_container"
            android:src="@drawable/ease_msg_state_fail_resend"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mentioned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/msg_state"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:text="@string/were_mentioned"
            android:textColor="#e84e40"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/time"
            android:layout_toRightOf="@id/mentioned"
            android:ellipsize="end"
            android:padding="7dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#9f9fa0"
            android:textSize="14sp" />

    </RelativeLayout>


</RelativeLayout>