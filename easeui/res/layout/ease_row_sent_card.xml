<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="13dp">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_chat_activity">

        <com.hyphenate.easeui.view.RoundedImageView
            android:id="@+id/iv_userhead"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_chat_activity"
            android:scaleType="centerCrop"
            app:border_color="#ededed"
            app:border_width="0.5dp"
            app:corner_radius="5dip"
            app:mutate_background="false"
            app:oval="true"
             />

        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/iv_userhead"
            android:background="@drawable/ease_seabar_input">

            <LinearLayout
                android:id="@+id/liner_bubble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="right">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical|right"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:text="墨迹" />
                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="#9f9fa0"
                            android:textSize="12sp"
                            android:text="嘚啵号: 123456" />
                    </LinearLayout>

                    <com.hyphenate.easeui.view.RoundedImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/size_avatar"
                        android:layout_height="@dimen/size_avatar"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        app:border_color="#ededed"
                        app:border_width="0.5dp"
                        app:corner_radius="5dip"
                        app:mutate_background="false"
                        app:oval="true"  />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#ededed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:textColor="#9f9fa0"
                    android:layout_gravity="right"
                    android:text="个人名片" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/gift_bubble"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:visibility="gone"
                android:background="@drawable/send_gift_bubble">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="送你一份礼物"
                    android:textSize="16sp"
                    android:textColor="@color/btn_white_normal"
                    android:layout_marginRight="35dp"/>

            </RelativeLayout>

        </RelativeLayout>



        <ImageView
            android:id="@+id/msg_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_userhead"
            android:layout_marginRight="230dp"
            android:clickable="true"
            android:src="@drawable/ease_msg_state_failed_resend"
             />

        <TextView
            android:id="@+id/tv_ack"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_userhead"
            android:layout_marginRight="230dp"
            android:text="@string/text_ack_msg"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_delivered"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_userhead"
            android:layout_marginRight="230dp"
            android:text="@string/text_delivered_msg"
            android:textSize="12sp"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_userhead"
            android:layout_marginRight="230dp"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>