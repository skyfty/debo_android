<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <include layout="@layout/title_bar_red" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F1F1F1">

        <FrameLayout
            android:id="@+id/fl_layout"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_nav_img1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <com.hyphenate.easeui.view.RoundedImageView
                    android:id="@+id/icon_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    app:corner_radius="5dp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_head"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:textColor="#262626"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_send_liuyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="恭喜发财，大吉大利"
                    android:textColor="@color/card_name"
                    android:textSize="10sp" />
                <LinearLayout
                    android:id="@+id/ll_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_send_liuyan"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0.00"
                        android:textColor="#262626"
                        android:textSize="24sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text=""
                        android:textColor="#262626"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_money"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="已存入零钱，可用于发红包"
                    android:textColor="@color/alivc_blue"
                    android:textSize="10sp" />
               <!-- <TextView
                    android:id="@+id/tv_liuyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_input"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="留言"
                    android:textColor="#262626"
                    android:textSize="14sp" />-->
            </RelativeLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fl_layout"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:textColor="#828282"
                android:textSize="12sp" />

            <View
                android:id="@+id/fengexian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_content"
                android:background="@color/divider"
                android:visibility="visible" />

            <ListView
                android:id="@+id/lv_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_lookRecord"
                android:layout_below="@+id/fengexian"
                android:divider="@color/divider"
                android:dividerHeight="1dp"></ListView>
            <TextView
                android:id="@+id/tv_liuyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lv_record"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="留言"
                android:textColor="#262626"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_lookRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="查看我的红包记录"
                android:textColor="#596989"
                android:textSize="12sp"
                android:visibility="gone"/>
        </RelativeLayout>

    </RelativeLayout>
    <include layout="@layout/layout_circle_edittext" />

</LinearLayout>
