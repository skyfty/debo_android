<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
            android:id="@+id/swipeToLoadLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_title"
            app:swipe_style="above">

            <include
                android:id="@id/swipe_refresh_header"
                layout="@layout/layout_google_hook_header" />

            <com.we.widget.WeRecycleView
                android:id="@+id/swipe_target"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_title"
                android:background="@color/color_divider2"
                android:headerDividersEnabled="false"
                android:scrollbars="none" />

            <include
                android:id="@id/swipe_load_more_footer"
                layout="@layout/layout_google_hook_footer" />
        </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingTop="20dp"
                android:orientation="vertical">

                <!--<View
                    android:id="@+id/status_bar"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/image_back"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/back" />


                    <ImageView
                        android:id="@+id/text_publish"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_circle_camera" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="100dp"
                        android:layout_toEndOf="@+id/image_back"
                        android:text="朋友圈"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/image_arrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_title"
                        android:src="@mipmap/arrow_bottom" />
                </RelativeLayout>
            </LinearLayout>

            <!-- <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
                 android:id="@+id/swipeToLoadLayout"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_below="@+id/layout_title"
                 app:swipe_style="above">

                 <include
                     android:id="@id/swipe_refresh_header"
                     layout="@layout/layout_google_hook_header" />
     -->

            <!--  <include
                  android:id="@id/swipe_load_more_footer"
                  layout="@layout/layout_google_hook_footer" />
          </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>-->
        </RelativeLayout>

        <include layout="@layout/layout_circle_edittext" />
    </FrameLayout>

</LinearLayout>