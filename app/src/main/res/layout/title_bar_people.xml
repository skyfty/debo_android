<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:alpha="1"
    android:background="@drawable/gradient_bg"
    android:gravity="center_vertical"
    android:paddingTop="20dp"
    >

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@mipmap/orcode"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="100dp"
        android:clickable="true"
        android:gravity="center"
        >


        <RadioButton
            android:id="@+id/rb_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:background="@drawable/people_selector2"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="2dp"
            android:text="好友"
            android:textColor="@drawable/people_text_select"
            android:textSize="18sp"
            />

        <RadioButton
            android:id="@+id/rb_people"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/rb_friend"
            android:gravity="center"
            android:background="@drawable/people_selector"
            android:paddingBottom="2dp"
            android:paddingLeft="14dp"
            android:drawableRight="@drawable/people_check_right"
            android:drawablePadding="2dp"
            android:paddingRight="14dp"
            android:paddingTop="2dp"
            android:text="人脉"
            android:textColor="@drawable/people_text_select"
            android:textSize="18sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >
        <!--android:background="@drawable/ease_common_tab_bg"-->

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@mipmap/red_envelope"
            />
    </RelativeLayout>

</RelativeLayout>