<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/circle_popuwindow_width"
        android:layout_height="@dimen/circle_popuwindow_height"
        android:background="@mipmap/popubg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/white"
            android:textSize="@dimen/circle_popuwindow_text" />

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/circle_view_margin"
            android:layout_marginRight="@dimen/circle_view_margin"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/circle_view_margin"
            android:background="@color/card_name" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="人脉圈"
            android:textColor="@color/white"
            android:textSize="@dimen/circle_popuwindow_text" />
    </LinearLayout>

</LinearLayout>