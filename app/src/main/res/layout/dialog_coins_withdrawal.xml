<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="零钱提现"
        android:textColor="@color/circle_name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="￥0.00"
        android:textColor="@color/circle_name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_decuct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="额外扣除￥0.00手续费"
        android:textColor="@color/fans_gray"
        android:textSize="16sp" />

    <com.jungly.gridpasswordview.GridPasswordView
        android:id="@+id/pwdView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:gpvGridColor="#ffffff"
        app:gpvLineColor="@color/color_divider"
        app:gpvLineWidth="1dp"
        app:gpvPasswordLength="6"
        app:gpvPasswordType="numberPassword"
        app:gpvTextColor="@color/circle_name"
        app:gpvTextSize="16sp" />

    <!--android:gravity="center"-->
    <!--app:gpvPasswordTransformation="."-->
</LinearLayout>