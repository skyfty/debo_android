<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:calendarview="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rect_white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/last_year"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="40dp"
            android:background="@mipmap/last"
             />
        <ImageView
            android:id="@+id/last_month"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/last_year"
            android:background="@mipmap/last"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/next_month"
            android:layout_width="20dp"
            android:layout_toLeftOf="@+id/next_year"
            android:layout_centerVertical="true"
            android:layout_height="20dp"
            android:background="@mipmap/next"
             />
        <ImageView
            android:id="@+id/next_year"
            android:layout_width="25dp"
            android:layout_marginLeft="10dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:background="@mipmap/next"
            />

    </RelativeLayout>

    <com.qcwl.debo.calendarView.WeekView
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="35dp" />

    <com.qcwl.debo.calendarView.CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="200dp"
        calendarview:disable_before="true"
        calendarview:date_end="2050.12"
        calendarview:date_start="1990.1" />

</LinearLayout>
