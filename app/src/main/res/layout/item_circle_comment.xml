            android:textSize="@dimen/circle_data" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/text"
            android:textSize="@dimen/circle_data" />
