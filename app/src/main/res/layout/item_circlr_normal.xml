<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:expandableTextView="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/circle_recycle_item_marginbottom"
    android:paddingLeft="@dimen/circle_recycle_item_marginleft"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/circle_recycle_item_margintop">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/circle_message_image"
        android:layout_height="@dimen/circle_message_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/circle_name"
            android:textSize="@dimen/circle_name"
            android:textStyle="bold" />

        <com.qcwl.debo.view.ExpandableTextView
            android:id="@+id/expand_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            expandableTextView:animAlphaStart="1"
            expandableTextView:maxCollapsedLines="6">

            <TextView
                android:id="@id/expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-light"
                android:text=""
                android:textColor="#666666"
                android:textSize="@dimen/circle_content" />

            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:background="@android:color/transparent"
                android:padding="16dp" />
        </com.qcwl.debo.view.ExpandableTextView>

         <TextView
             android:id="@+id/text_content"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginBottom="5dp"
             android:maxLines="6"
             android:text=""
             android:textColor="@color/circle_name"
             android:textSize="@dimen/circle_content" />

        <com.qcwl.debo.ui.circle.MyGridView
            android:id="@+id/grid_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:horizontalSpacing="5dp"
            android:paddingTop="12dp"
            android:scrollbars="none"
            android:verticalSpacing="5dp" />

        <!--<fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard-->
        <!--android:id="@+id/video_player"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp" />-->

        <RelativeLayout
            android:id="@+id/layout_play_video"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/black">

            <ImageView
                android:id="@+id/image_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/play_button" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:text=""
                android:textColor="@color/circle_time"
                android:textSize="@dimen/circle_data" />

            <TextView
                android:id="@+id/text_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:text="删除"
                android:textColor="@color/circle_reply"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:src="@mipmap/ic_circle_share"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_praise"
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="13dp"
                android:src="@mipmap/ic_circle_praise_normal" />

            <ImageView
                android:id="@+id/img_comment"
                android:layout_width="19dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginTop="13dp"
                android:src="@mipmap/ic_circle_comment_normal" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_arrow"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="end"
            android:layout_marginRight="63dp"
            android:src="@mipmap/arrow_bottom"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layout_praise_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <!--
                        <ImageView
                            android:id="@+id/img_praise_flag"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/ic_circle_praise_green_small" />-->

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flex_box_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/divider2"
                android:visibility="visible"
                app:alignContent="flex_start"
                app:alignItems="flex_start"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="flex_start" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/divider2"
            android:orientation="horizontal">

            <!-- <ImageView
                  android:id="@+id/img_comment_flag"
                  android:layout_width="14dp"
                  android:layout_height="14dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginRight="5dp"
                  android:src="@mipmap/ic_circle_comment_green" />-->

            <com.qcwl.debo.view.MyListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/divider2"
                android:divider="@color/divider2"
                android:dividerHeight="7dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>