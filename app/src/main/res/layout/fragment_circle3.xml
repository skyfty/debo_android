                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="14dp"
                        android:paddingRight="4dp"
                        android:paddingTop="12dp"
                        android:src="@mipmap/ic_circle_camera" />
