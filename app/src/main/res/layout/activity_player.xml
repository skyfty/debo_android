<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <SurfaceView
                    android:id="@+id/surfaceView"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="match_parent" >
                </SurfaceView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_fengmian"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                    <TextView
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:ellipsize="end"
                        android:id="@+id/tv_describe"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:maxLines="3"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="100dp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:paddingBottom="20dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/video_back"
                        android:id="@+id/go_badk"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/tv_describe"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:paddingBottom="100dp"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="19dp">

                        <ImageView
                            android:id="@+id/iv_head"
                            android:layout_centerVertical="true"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/head"
                            />

                        <LinearLayout
                            android:id="@+id/rl_dianzan"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:id="@+id/iv_dianzan"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/dianzan"
                                />
                            <TextView
                                android:id="@+id/tv_dianzanNum"
                                android:layout_below="@+id/iv_dianzan"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:layout_gravity="center_horizontal"
                                android:text="0"
                                />

                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/rl_pinglun"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/iv_pinglun"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/liaotian"
                                />
                            <TextView
                                android:id="@+id/tv_commentNum"
                                android:layout_below="@+id/iv_pinglun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="0"
                                android:layout_marginTop="5dp"
                                android:layout_centerHorizontal="true"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rl_guanzhu"
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_guanzhu"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/guanzhu1"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="播放次数："
                        android:textColor="#A6A6A6"
                        android:id="@+id/tv_palynum"
                        android:layout_marginTop="48dp"
                        android:layout_alignTop="@+id/tv_describe"
                        android:layout_alignStart="@+id/tv_describe" />
                </RelativeLayout>
        </FrameLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/play"
            android:layout_centerInParent="true"
            android:id="@+id/iv_playOrpouse"
            android:clickable="true"
            android:padding="100dp"
            android:visibility="visible"
            />
    </RelativeLayout>
</LinearLayout>
