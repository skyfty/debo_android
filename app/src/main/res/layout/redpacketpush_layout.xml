<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:padding="10dp"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:background="@drawable/push_redpacket_bg"
                android:gravity="center_vertical"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/tv_jine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="#060606"
                    />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/tt_money"
                        android:inputType="numberDecimal"
                        android:layout_width="100dp"
                        android:maxLength="6"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:hint="0.00"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:textSize="14dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="元"
                        android:textSize="14sp"
                        android:textColor="#060606"
                        />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RL_Num"
                android:padding="10dp"
                android:visibility="visible"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:background="@drawable/push_redpacket_bg"
                android:gravity="center_vertical"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红包个数"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="#060606"
                    />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/tt_HowNUM"
                        android:inputType="numberDecimal"
                        android:layout_width="100dp"
                        android:maxLength="6"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:textSize="14dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="个"
                        android:textSize="14sp"
                        android:textColor="#060606"
                        />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:padding="10dp"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:background="@drawable/push_redpacket_bg"
                android:layout_height="65dp">
                <EditText
                    android:id="@+id/tt_liuyan"
                    android:layout_width="match_parent"
                    android:layout_marginRight="5dp"
                    android:maxLength="30"
                    android:gravity="top"
                    android:hint="恭喜发财，大吉大利"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:textSize="14dp"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/biaoshis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#2E2E2E"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/tv_big_view"
                    android:layout_toRightOf="@+id/biaoshis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#2E2E2E"
                    android:textSize="30sp"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_but_push"
                android:layout_width="match_parent"
                android:layout_margin="30dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/over_redpacket_bg"
                android:text="塞钱进红包"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_tishi"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="#E6CEA0"
            android:padding="5dp"
            android:textColor="#C9674B"
            android:layout_height="25dp"
            android:visibility="gone"
            android:textSize="12sp"
            android:text="单个红包金额不能超过200元"
            />
    </RelativeLayout>

</LinearLayout>
