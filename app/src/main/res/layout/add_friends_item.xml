<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff">


        <com.hyphenate.easeui.view.RoundedImageView
            android:id="@+id/friends_item_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            app:border_color="#ededed"
            app:border_width="0.5dp"
            app:corner_radius="5dip"
            app:mutate_background="false"
            app:oval="false" />

        <TextView
            android:id="@+id/friends_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/friends_item_image"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/friends_item_isfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/friends_item_image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/friends_item_image"
            android:text="请求添加为好友"
            android:textColor="#808080"
            android:textSize="15sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/friends_item_tianjia"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_green"
            android:text="添加"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/friends_item_finish"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:text="已添加"
            android:textColor="#808080"
            android:textSize="20sp"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>
